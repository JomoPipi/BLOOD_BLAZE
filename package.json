{
  "name": "blood_blaze",
  "version": "1.0.0",
  "description": "DEVASTATING BLOOD DEATH EXTREME",
  "type": "module",
  "scripts": {
    "build": "cd src/client && npm install && npx rollup -c",
    "test": "jest",
    "setup": "npm install && cd src/client && npm install && cd ../..",
    "dev-client": "cd src/client && npx rollup -c -w",
    "dev-server": "concurrently npm:dev-server:*",
    "dev-server:compile": "tsc -w",
    "dev-server:run": "nodemon"
  },
  "engines": { "node": "14.x" },
  "nodemonConfig": {
    "restartable": "rs",
    "ignore": [
      ".git",
      "node_modules/",
      "dist/",
      "coverage/"
    ],
    "watch": [
      "src/server/",
      "src/shared/"
    ],
    "exec": "node --loader ts-node/esm src/server/main.ts --emit",
    "env": {
      "NODE_ENV": "development"
    },
    "ext": "js,json,ts"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "extensionsToTreatAsEsm": [
      ".ts"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JomoPipi/BLOOD_BLAZE.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/JomoPipi/BLOOD_BLAZE/issues"
  },
  "homepage": "https://github.com/JomoPipi/BLOOD_BLAZE#readme",
  "dependencies": {
    "express": "^4.17.1",
    "socket.io": "^4.1.3"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.14.5",
    "@tsconfig/svelte": "^2.0.1",
    "@types/express": "^4.17.13",
    "@types/jest": "^26.0.24",
    "@types/node": "^15.14.4",
    "@types/socket.io-client": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^4.28.3",
    "@typescript-eslint/parser": "^4.28.3",
    "concurrently": "^6.2.0",
    "eslint": "^7.31.0",
    "jest": "^27.0.6",
    "node-sass": "^6.0.1",
    "nodemon": "^2.0.12",
    "sirv-cli": "^1.0.12",
    "socket.io-client": "^4.1.3",
    "svelte-check": "^2.2.3",
    "svelte-preprocess": "^4.7.4",
    "ts-node": "^10.1.0",
    "typescript": "^4.3.5"
  }
}
